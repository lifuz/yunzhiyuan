<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/tab_gj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tab_guanjia"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管家"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/moretext"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_hb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tab_xhb"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="伙伴"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/moretext"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_ms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tab_mishu"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秘书"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/moretext"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_gr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tab_wo"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/moretext"/>

        </LinearLayout>





    </LinearLayout>




    <com.prd.testtv.widget.VerticalViewPager
        android:id="@+id/main_pager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:persistentDrawingCache="animation" />


