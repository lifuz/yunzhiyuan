<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/tab_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_xiaohuoban"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/soso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@drawable/login_submit"
        android:padding="2dp">

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:text="搜索"
            android:textColor="#1A1813"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/test"
            android:drawableLeft="@drawable/icon_square_sel"
            android:ems="10"
            android:text="请输入车牌号"
            android:background="#fff"
            ></EditText>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/login_submit"
            android:gravity="center"
            android:text="车牌号"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/login_submit"
            android:gravity="center"
            android:text="状态"
            android:textSize="20sp" />
    </LinearLayout>

   <com.prd.yzy.widget.LazyScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/xhb_waterfall_scroll">

       <LinearLayout
           android:id="@+id/xhb_waterfall_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"/>

   </com.prd.yzy.widget.LazyScrollView>

</LinearLayout>